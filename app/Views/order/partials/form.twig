<div class="col-md-6">
	<h3>{{ 'order.form.your.details'|trans }}</h3>
	<hr>

	<div class="form-group{{ (errors.email) ? ' has-error' : '' }}">
		<label for="email">{{ 'order.form.your.details.email'|trans }}</label>
		<input type="email" name="email" id="email" class="form-control" value="{{ old.email }}">
		{% if errors.email %}
			<span class="help-block">
			{{ errors.email | first }}
			</span>
		{% endif %}
	</div>

	<div class="form-group{{ (errors.name) ? ' has-error' : '' }}">
		<label for="name">{{ 'order.form.your.details.full.name'|trans }}</label>
